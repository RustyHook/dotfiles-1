#!/bin/sh
#
# lemonbar config by jastronaut
## fonts, colors, dimensions, bspwm stuff, and icons
#

# fonts
FONT="PIXELA CYR:size=24"
ICO_FONT="FontAwesome:size=17"

#colors
## basics
FG="#d3d0c8"
BG="#2d2d2d"
LABEL="#65737e"

## rainbow
RED="#bf616a"
ORANGE="#d3824a"
YEL="#ebcb8b"
GRE="#a1b599"
BLUE1="#8eb0b2"
PURPLE="#b48ead"
#ACCENT="#e094a1"
PINK="#c59799"

# geometry
PW=$(xrandr --current | grep '*' | uniq | awk '{print $1}' | cut -d 'x' -f1)
PH=37
PX=0
PY=0

# bspwm stuff
bspc config top_padding 37
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0

# misc
## spaces. this is dumb
SEP="        "

## click click
AC='%{A:'           # start click area
AB=':}'             # end click area cmd
AE='%{A}'           # end click area

## move out
moveto='bspc desktop -f' # go to this desktop

## icons
### static
ICON_MUTED='\uf026'
ICON_VOLUME_HI='\uf028'
ICON_MUSIC='\uf001'
ICON_DATE='\uf073'
ICON_TIME='\uf017'
FULL='\uf004'
EMPTY='\uf08a'

## clickable
ICO_PREV='« '
ICO_NEXT=' »'

# workspaces
WS1='1'
WS2='2'
WS3='3'
WS4='4'
