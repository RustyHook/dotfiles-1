#!/bin/sh
#
# lemonbar config by jastronaut
## fonts, colors, dimensions, bspwm stuff, and icons
#

# font
FONT="Pixelade:size=18"
#PANEL_FONT="-*-candy-*-*-*--11-*-*-*-*-*-*-*"
ICO_FONT="FontAwesome:size=17"

# colors - base 16 ocean dark
## basics
FG="#c0c5ce"
BG="#2c2d27"
BG_D="#364751"
LABEL="#65737E"

## rainbow
RED="#bf616a"
ORANGE="#d3824a"
YELLOW="#ebcb8b"
GREEN="#a1b599"
BLUE1="#8eb0b2"
PURPLE="#b48ead"
#ACCENT="#e094a1"
PINK="#c59799"

# geometry
PW=2120
PH=37
PX=20
PY=17

# bspwm stuff
bspc config top_padding 50
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0

# misc
## spaces. this is dumb
SEP="        "

## click click
AC='%{A:'           # start click area
AB=':}'             # end click area cmd
AE='%{A}'           # end click area

## move out
moveto='bspc desktop -f' # go to this desktop

## icons
### static
ICON_MUTED='\uf026'
ICON_VOLUME_HI='\uf028'
ICON_MUSIC='\uf001'
ICON_DATE='\uf073'
ICON_TIME='\uf017'
FULL='\uf004'
EMPTY='\uf08a'
BRIGHT='\uf185'
### clickable
ICON_LAUNCH="${AC}dmenu_run -dim 0.5 -fn \"Cantarell:20\" -l 10 -h 40 -x 550 -y 300 -w 1000${AB}\uf135${AE}"
ICO_NEXT='\uf101'
ICO_PREV='\uf100'

# workspace icons
# WS1='\uf269'
# WS2='\uf121'
# WS3='\uf120'

WS1='I'
WS2='II'
WS3='III'
