#!/bin/sh
#
# lemonbar config by jastronaut
## fonts, colors, dimensions, bspwm stuff, and icons
#

# font
PANEL_FONT="Cantarell:size=13"
#PANEL_FONT="-*-candy-*-*-*--11-*-*-*-*-*-*-*"
PANEL_FONT2="FontAwesome:size=17"

# colors - base 16 ocean dark
## basics
FG="#c0c5ce"
BG="#2b303b"
LABEL="#65737E"

## rainbow
RED="#bf616a"
ORANGE="#d08770"
YELLOW="#ebcb8b"
GREEN="#a3be8c"
BLUE1="#96b5b4"
BLUE2="#96b5b4"
PURPLE="#b48ead"
ACCENT="#e094a1"

# geometry
PW=2132
PH=37
PX=14
PY=22

# bspwm stuff
bspc config top_padding 50
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0

# misc
## spaces. this is dumb
SEP="        "

## click click
AC='%{A:'           # start click area
AB=':}'             # end click area cmd
AE='%{A}'           # end click area

## move out
moveto='bspc desktop -f' # go to this desktop

## icons
### static
ICON_BAT='\uf241'
ICON_MUTED='\uf026'
ICON_VOLUME_LO='\uf027'
ICON_VOLUME_HI='\uf028'
ICON_MUSIC='\uf001'
ICON_DATE='\uf073'
ICON_TIME='\uf017'
### clickable
ICON_LAUNCH="${AC}rofi -show run${AB}\uf135${AE}"
ICO_NEXT='\uf101'
ICO_PREV='\uf100'
WS1='\uf269'
WS2='\uf121'
WS3='\uf120'