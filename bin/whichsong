#!/bin/bash
#
# current song script by jastronaut
## shows notification on ncmpcpp song change
#

. ~/bin/panel_config

# notification geometry
nw=300
nh=40
nx=1800
ny=50

zzz=7

# song
song="$(mpc current | cut -c 1-40)"

# pipe it out
(echo "%{c}%{U$RED}%{O$RED}%{+o}%{+u}  $song  %{-u}%{-o}"; sleep $zzz) | lemonbar -g ${nw}x${nh}+${nx}+${ny} -f ${PANEL_FONT} -f ${PANEL_FONT2} -F $ACCENT -B $BG -u 4px