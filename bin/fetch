#!/bin/bash
#
# system info script by jastronaut
#

title="$(whoami) @ $(hostname)"
kernel="$(uname -r)"
packages="$(pacman -Q | wc -l)"
wm="bspwm"
uptime="$(uptime -p | sed s:"up "::)"
music="$(mpc current | cut -c 1-40)"

red="$(tput setaf 1)"
green="$(tput setaf 2)"
dc="$(tput sgr0)"

echo " '                   $title"
echo "       *         .-.   ${green}os${dc}: arch linux                          *"
echo ".         ${red},o8888o,${dc} |   ${green}kernel${dc}: linux $kernel    '"
echo "        ${red},888888888${dc}/${red},${dc}   ${green}packages${dc}: $packages       +"
echo "    *   ${red}888888888${dc}/${red}88${dc}   ${green}wm${dc}: $wm                   *"
echo "  .     ${red}8888888${dc}/'${red}888${dc}   ${green}uptime${dc}: $uptime     .         "
echo "        ${red}'8888${dc}/'${red}8888'${dc}   ${green}song${dc}: $music"
echo " +      ( ${red}'${dc},'${red}888P'${dc}     .                 *"
echo "        '-'"
