#!/bin/bash
#
# lemonbar config by jastronaut
## features: clock, date, volume level, battery (with color indicator), current song, and workspace status
#

# get config
. ~/bin/panel_config

launcher() { # click icon to invoke rofi
	echo -e "${ICON_LAUNCH}"
}

getClock() { # time
    date '+%H:%M'
}

getCal() { # date
	date '+%a %b %d, %Y'
	echo "$date"
}

getVolume() { # get volume level from alsa thing
	VOLUME=$(amixer get Master | grep % | sed -n 1p | awk -F '[' '{print $2}' | awk -F ']' '{print $1}')

	if [ $VOLUME = '0%' ];
		then echo -e " %{F$LABEL}$ICON_MUTED   MUTED %{F-}"
	else
		echo -e "%{F$LABEL}VOL  $ICON_VOLUME_HI%{F-}    $VOLUME"
	fi
}

getBattery() { # battery percentage
	BAT=$(acpi -b | grep -P -o '[0-9]+(?=%)')
	if [ $BAT -eq 100 ]
		then echo "%{F$LABEL}BAT%{F-} %{F$YELLOW}  $BAT%%{F-}"
	elif [ $BAT -le 90 ] && [ $BAT -gt 39 ]
	   then echo -e "%{F$LABEL}BAT%{F-} %{F$GREEN}  $BAT%%{F-}"
	elif [ $BAT -lt 30 ] && [ $BAT -gt 19 ]
		then echo "%{F$LABEL}BAT%{F-} %{F$ORANGE}  $BAT%%{F-}"
	elif [ $BAT -lt 20 ] && [ $BAT -gt 0 ]
		then echo "%{F$LABEL}BAT%{F-} %{F$RED}  $BAT%%{F-}"
	else
		echo -e "%{F$LABEL}BAT%{F-} %{F$GREEN}  $BAT%%{F-}"
	fi
}

mpd() { # based on neeasade's function
    cur_song="$(basename "$(mpc current -f "%artist% - %title%")" | cut -c1-30 )"

    if [ -z "$cur_song" ];
    	then echo "Stopped"
    else
        paused=$(mpc | grep paused)
        [ -z "$paused" ] && toggle="${AC}mpc pause${AB}${ICO_PAUSE}${AE}" ||
            toggle="${AC}mpc play${AB}${ICO_PLAY}${AE}"
        prev="${AC}mpc prev${AB}${ICO_PREV}${AE}"
        next="${AC}mpc next${AB}${ICO_NEXT}${AE}"
        echo "$cur_song $prev $toggle $next"
    fi
}

desk() { # get active workspace
	CUR=$(xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}')
	case $CUR in
		0) echo -e "%{B$ACCENT}%{F$BG}${AC}$moveto I${AB} $WS1 ${AE}%{F-}%{B-}     ${AC}$moveto II${AB} $WS2 ${AE}     ${AC}$moveto III${AB} $WS3 ${AE}";;
		1) echo -e "${AC}$moveto I${AB} $WS1 ${AE}     %{B$ACCENT}%{F$BG}${AC}$moveto II${AB} $WS2 ${AE}%{F-}%{B-}     ${AC}$moveto III${AB} $WS3 ${AE}";;
		2) echo -e "${AC}$moveto I${AB} $WS1 ${AE}     ${AC}$moveto II${AB} $WS2 ${AE}     %{B$ACCENT}%{F$BG}${AC}$moveto III${AB} $WS3 ${AE}%{F-}%{B-}";;
		*) for i in `seq 1 $CUR`;
        do
                echo $i
        done 
	esac
}

# print out the stuff in the grossest manner possible
while :; do

    echo -e "%{l}$SEP$(launcher)$SEP$(desk)$SEP$SEP$SEP$(getMusic)$SEP$(mpd)%{c}$ICON_TIME  $(getClock)$SEP$ICON_DATE  $(getCal)%{r}$(getVolume) $SEP$(getBattery)$SEP"
    sleep 1

done | lemonbar -g ${PW}x${PH}+${PX}+${PY} -f "$PANEL_FONT" -f "$PANEL_FONT2" -u "2" -F "$FG" -B "$BG" -p | zsh