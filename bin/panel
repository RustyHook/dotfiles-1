#!/bin/bash
#
# lemonbar config by jastronaut
## features: clock, date, volume level, battery (with color indicator), current song, and workspace status
#

# get config
. ~/bin/panel_config

getClock() { # time
    date '+%H:%M'
}

getDate() { # date
	date '+%a %b %d'
	echo "$date"
}

getVolume() { # get volume level from alsa thing
	vol=$(amixer get Master | grep % | sed -n 1p | awk -F '[' '{print $2}' | awk -F ']' '{print $1}')

	if [ $vol = '0%' ];
		then echo -e "%{F$LABEL}VOL  MUTED %{F-}"
	else
		echo -e "%{F$LABEL}VOL%{F-}   $vol"
	fi
}

getBattery() { # battery percentage
	bat=$(acpi -b | grep -P -o '[0-9]+(?=%)')
	ch_state=$(acpi -b | cut -c12-19)
	ch=""
	if [[ $ch_state = "Charging" ]]
		then ch='*'
	else
		ch=""
	fi

	if [ $bat -le 100 ] && [ $bat -ge 80 ]
	   then echo -e "%{F$LABEL}BAT  %{F-} %{F$PINK}$FULL $FULL $FULL $FULL $FULL%{F-} %{F$GRE}  $bat%%{F-} %{F$YEL}$ch%{F-}"
	elif [ $bat -lt 80 ] && [ $bat -ge 60 ]
		then echo -e "%{F$LABEL}BAT %{F-} %{F$PINK}$FULL $FULL $FULL $FULL%{F-} $EMPTY %{F$GRE}   $bat%%{F-} %{F$YEL}$ch%{F-}"
	elif [ $bat -lt 60 ] && [ $bat -ge 40 ]
		then echo -e "%{F$LABEL}BAT %{F-} %{F$PINK}$FULL $FULL $FULL%{F-} $EMPTY $EMPTY %{F$GRE}  $bat%%{F-} %{F$YEL}$ch%{F-}"
	elif [ $bat -lt 40 ] && [ $bat -ge 20 ]
		then echo -e "%{F$LABEL}BAT %{F-} %{F$PINK}$FULL $FULL%{F-} $EMPTY $EMPTY $EMPTY %{F$GRE}  $bat%%{F-} %{F$YEL}$ch%{F-}"
	else
		echo -e "%{F$LABEL}BAT %{F-} %{F$PINK}$FULL%{F-} $EMPTY $EMPTY $EMPTY $EMPTY %{F$PINK}  $bat%%{F-} %{F$YEL}$ch%{F-}"
	fi
}

mpd() { # based on neeasade's function
    cur_song="$(basename "$(mpc current -f "%artist% - %title%")" | cut -c1-50 )"

    if [ -z "$cur_song" ];
    	then echo "Stopped"
    else
        paused=$(mpc | grep paused)
        [ -z "$paused" ] && toggle="${AC}mpc pause${AB}pause${AE}" ||
            toggle="${AC}mpc play${AB}play${AE}"
        prev="${AC}mpc prev${AB}${ICO_PREV}${AE}"
        next="${AC}mpc next${AB}${ICO_NEXT}${AE}"
        echo "$cur_song$SEP%{F$LABEL}$prev $toggle $next%{F-}"
    fi
}

desk() { # get active workspace
	cur=$(xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}')
	case $cur in
		0) echo -e "%{U$PINK}%{+u}${AC}$moveto I${AB} $WS1 ${AE}%{-u}    ${AC}$moveto II${AB} $WS2 ${AE}    ${AC}$moveto III${AB} $WS3 ${AE}    ${AC}$moveto IV${AB} $WS4 ${AE}";;
		1) echo -e "${AC}$moveto I${AB} $WS1 ${AE}    %{U$PINK}%{+u}${AC}$moveto II${AB} $WS2 ${AE}%{-u}    ${AC}$moveto III${AB} $WS3 ${AE}    ${AC}$moveto IV${AB} $WS4 ${AE}";;
		2) echo -e "${AC}$moveto I${AB} $WS1 ${AE}    ${AC}$moveto II${AB} $WS2 ${AE}    %{U$PINK}%{+u}${AC}$moveto III${AB} $WS3 ${AE}%{-u}    ${AC}$moveto IV${AB} $WS4 ${AE}";;
		3) echo -e "${AC}$moveto I${AB} $WS1 ${AE}    ${AC}$moveto II${AB} $WS2 ${AE}    ${AC}$moveto III${AB} $WS3 ${AE}    %{U$PINK}%{+u}${AC}$moveto IV${AB} $WS4 ${AE}%{-u}";;
		*) echo "$cur"
	esac
}

getBrightness() { # get brightness level
	lvl="$(xbacklight -get | cut -c1-3)"
	echo -e "%{F$LABEL}LUM%{F-}   $lvl"
}

# print out the stuff in the grossest manner possible
while :; do
    echo -e "%{l}$SEP$SEP$(desk)$SEP$(mpd)%{c}$(getClock)  $(getDate)%{r}$(getVolume)    $(getBrightness)$SEP$(getBattery)$SEP$SEP"
    sleep 1
done | lemonbar -g ${PW}x${PH}+${PX}+${PY} -f "$FONT" -f "$ICO_FONT" -u 4px -F "$FG" -B "$BG" -p | bash
