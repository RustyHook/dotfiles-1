##
# bspwm config by jastronaut
# mostly defaults, but with a ton of keyboard shortcuts
#
. ~/riceinfo
##
# hotkeys
#

super + n
	pcmanfm

super + w 
	firefox

super + g
	gimp
	
super + a
	ahoviewer

super + b
	subl3

super + c 
	chromium --high-dpi-support=1 --force-device-scale-factor=1.75

super + o
	spotify --force-device-scale-factor=1.50

super + F10
	scrot '%Y-%m-%d_(%H-%M).png' -e 'mv $f ~/pictures/scrots/'

super + l
	./bin/lock2

super + F1
	exec xbacklight -1

super + F2
	exec xbacklight +1

super + F6
	amixer -q set Master 5%+ unmute

super + F5
	amixer -q set Master 5%- unmute

super + F3
	amixer -q set Master mute

##
# bspwm stuff
#

alt + shift + e
	bspc quit

# close window
super + q
	bspc window -c

# super + n
# 	bspc desktop -l next

super + {t,p,s,f}
	bspc window -t {tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

# super + {o,i}
# 	bspc control --record-history off; \
# 	bspc window {older,newer} -f; \
# 	bspc control --record-history on

super + y
	bspc window -w last.!automatic

# move current window to biggest space
super + m
	bspc window -s biggest

# move left, down, up, right
super + {_,shift + }{a,s,w,d}
	bspc window -{f,s} {left,down,up,right}

# cycle through open windows
super + {_,shift + }Left
	bspc window -f {next,prev}

# move up, down, left, or right
super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

#ctrl + alt + {a,s,w,d}
#	bspc window -e {left -10,down +10,up -10,right +10}

#ctrl + shift + {d,s,w,a}
#	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} '^{1-9,10}'

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}


super + @button{1-3}
	bspc pointer -u

super + !button{1-3}
    bspc pointer -t %i %i

##
# wm independent hotkeys
#

super + Return
	urxvt

super + space
	dmenu_run -dim 0.5 -fn 'PIXELA CYR-22' -l 10 -h 40 -x 550 -y 300 -w 1000 -nb '#515151' -nf '#E8E6DF' -sb '#c59799' -sf '#E8E6DF'
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
